@page "/taskAdding"
@using OilQuality.Data;
@inject ISnackbar Snackbar
@inject NavigationManager navigation;

<MudAppBar Style="margin-top: 2%; position: absolute; width: 90%; left: 50%; transform: translate(-50%, 0); background-color: white; box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px; align-items: center;">
    <MudButton Href="manager">
        Главная страница
    </MudButton>
    <MudButton Href="/allAnalyzeList">
        Выполненные анализы
    </MudButton>
    <MudButton Href="/managerEquipList">
        Оборудование
    </MudButton>
</MudAppBar>

<div class="mainblock">
    <div style="width: 50%; ">
        <img src='/css//Mesh-20.png' style="width: 100%; height:100%; object-fit: cover; overflow: hidden; box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;">
    </div>
    <div style="width: 50%;  padding: 25px; ">
        <MudText Style="font-size: 18px; text-align: center; margin: 10px">
            Задание
        </MudText>
        <MudText Style="font-size: 16px">
            Описание:
        </MudText>
        <MudTextField T="String" Variant="Variant.Text" Style="font-size: 16px; margin: 0" @bind-Value="@info" />
        <MudText Style="font-size: 16px; margin: 0">
            Сотрудник, выполняющий задание:
        </MudText>
        <MudSelect T="String" @bind-Value="@workerLogin" Style="font-size: 16px; margin: 0">
            @foreach (var worker in listOfUsers)
            {
                <MudSelectItem Value="@worker.Surname" />
            }
        </MudSelect>
        <MudButton Variant="Variant.Outlined" Color="Color.Info" Class="d-flex mx-auto" Style="margin: 15px" @onclick="NewTask">
            Сохранить
        </MudButton>
    </div>

</div>

@code {
    string? info;
    string? workerLogin;
    List<User> listOfUsers;


    protected override void OnInitialized()
    {
        listOfUsers = DBConnection.ImportAllLabWorkers();

    }

    public void NewTask()
    {
        if (info != null && workerLogin != null)
        {
            var worker = DBConnection.FindUserByLogin(workerLogin);

            Data.Task newTask = new Data.Task()
            {
                TaskInfo = info,
                Worker = worker
            };

            DBConnection.AddTaskToDataBase(newTask);

            Snackbar.Add("Задание добавлено", Severity.Success);

            navigation.NavigateTo("/manager");
        }
        else
        {
            Snackbar.Add("Не все поля заполнены корректно.", Severity.Error);
        }
    }
}

